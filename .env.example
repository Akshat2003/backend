# ========================================
# SPARKEE OPERATOR BACKEND CONFIGURATION
# ========================================

# Environment
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ========================================
# DATABASE CONFIGURATION
# ========================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/sparkee-operator
MONGODB_TEST_URI=mongodb://localhost:27017/sparkee-operator-test

# ========================================
# JWT CONFIGURATION
# ========================================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ========================================
# EMAIL CONFIGURATION
# ========================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# From Email
FROM_EMAIL=noreply@parking-operator.com

# ========================================
# OTP CONFIGURATION
# ========================================

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ========================================
# PAYMENT GATEWAY CONFIGURATION
# ========================================

# Razorpay (Example)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# UPI Configuration
UPI_MERCHANT_ID=your-merchant-id
UPI_MERCHANT_CODE=your-merchant-code

# ========================================
# SMS CONFIGURATION (Optional)
# ========================================

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# TextLocal (Alternative)
TEXTLOCAL_API_KEY=your-textlocal-api-key
TEXTLOCAL_USERNAME=your-textlocal-username

# ========================================
# MACHINE INTEGRATION
# ========================================

# Machine Controller Settings
MACHINE_API_ENDPOINT=http://localhost:8080/api
MACHINE_API_KEY=your-machine-api-key
MACHINE_TIMEOUT=30000

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================

# Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_DIR=uploads

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking (Sentry, etc.)
SENTRY_DSN=your-sentry-dsn

# ========================================
# DEVELOPMENT ONLY
# ========================================

# Debug Settings
DEBUG_SQL=false
DEBUG_REQUESTS=true

# Mock Services (for development)
MOCK_PAYMENT_GATEWAY=true
MOCK_SMS_SERVICE=true
MOCK_EMAIL_SERVICE=false

# ========================================
# PRODUCTION SETTINGS
# ========================================

# Session Configuration
SESSION_SECRET=your-session-secret-key
SECURE_COOKIES=true

# SSL/TLS
FORCE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# CORS Origins (comma separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# ADMIN CONFIGURATION
# ========================================

# Default Admin User (Created on first run)
ADMIN_OPERATOR_ID=OP001
ADMIN_EMAIL=admin@parking-operator.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# ========================================
# BACKUP CONFIGURATION
# ========================================

# Database Backup
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ========================================
# CACHE CONFIGURATION
# ========================================

# Redis (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache TTL (in seconds)
CACHE_USER_SESSION=3600
CACHE_ANALYTICS=1800
CACHE_MACHINE_STATUS=300

# ========================================
# WEBHOOK CONFIGURATION
# ========================================

# External System Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10000

# Machine Status Webhook
MACHINE_WEBHOOK_URL=http://localhost:5000/api/webhooks/machine-status

# Payment Webhook
PAYMENT_WEBHOOK_URL=http://localhost:5000/api/webhooks/payment-status